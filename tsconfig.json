{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true // Enable source maps for debugging
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*/.spec.ts"]
}
